{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "target": "es2019",
        "sourceMap": true,
        "outDir": "./dist",
        "jsx": "react"
    },
    "include": ["src"],
    "exclude": ["**/node_modules", "**/dist"]
}
